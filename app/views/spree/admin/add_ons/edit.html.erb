<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
    Editing Add On: <%= @add_on.name %>
<% end %>

<% content_for :page_actions do %>
    <li><%= link_to_with_icon 'arrow-left', "Back to Add Ons", admin_add_ons_path, :class => 'button' %></li>
<% end %>


<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @add_on } %>

<%= form_for [:admin, @add_on.becomes(Spree::AddOn)] do |f| %>
    <% f.object = @add_on.becomes(@add_on.class) %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>
      <div class="clear"></div>
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
<% end %>